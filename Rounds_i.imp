IMPLEMENTATION Rounds_i
REFINES Rounds

CONCRETE_VARIABLES
    gambleTime, gameFinished


INITIALISATION 
	gambleTime := YES;
	gameFinished := NO


OPERATIONS
	stopGambleTime = 
		gambleTime:=NO;

	startGambleTime = 
		gambleTime:=YES;
	
	finishGame = 
		gameFinished:=YES

 END